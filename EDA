import matplotlib.pyplot as plt
import seaborn as sns

# Set default plotting style
sns.set(style='whitegrid', palette='muted')

# 1. Distribution of Target Variable (Readmission)
plt.figure(figsize=(6,4))
sns.countplot(data=df, x='readmitted')
plt.title("🔁 Readmission Distribution")
plt.xticks([0,1], ['No Readmission', 'Readmitted <30 Days'])
plt.xlabel("Readmitted")
plt.ylabel("Patient Count")
plt.show()

# 2. Readmission by Age Group
plt.figure(figsize=(10,6))
sns.countplot(data=df, x='age', hue='readmitted')
plt.title("📊 Readmission Rate by Age Group")
plt.xlabel("Age Group")
plt.ylabel("Number of Patients")
plt.legend(["No", "<30 Days"])
plt.xticks(rotation=45)
plt.show()

# 3. Gender Distribution
plt.figure(figsize=(6,4))
sns.countplot(data=df, x='gender')
plt.title("👫 Gender Distribution")
plt.show()

# 4. Race Distribution
plt.figure(figsize=(6,4))
sns.countplot(data=df, x='race')
plt.title("🌍 Race Distribution")
plt.xticks(rotation=45)
plt.show()

# 5. Length of Stay vs Readmission
plt.figure(figsize=(8,5))
sns.boxplot(data=df, x='readmitted', y='time_in_hospital')
plt.title("🏥 Time in Hospital vs Readmission")
plt.xlabel("Readmitted")
plt.ylabel("Days in Hospital")
plt.xticks([0,1], ['No', '<30 Days'])
plt.show()

# 6. Correlation Heatmap
plt.figure(figsize=(16,12))
corr = df.corr()
sns.heatmap(corr, cmap='coolwarm', annot=False, linewidths=0.5)
plt.title("📌 Correlation Heatmap of All Variables")
plt.show()
